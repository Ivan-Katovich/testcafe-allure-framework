{
  "compileOnSave": false,
  "compact": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "error-stack-parser",
      "lodash",
      "node",
      "winston"
    ],
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "node_modules_bak"
  ]
}
